<div class="container-fluid d-flex justify-content-center">
  <h1 class="d-inline p-2 m-2 text-bg text-white">Login</h1>
</div>
<div class="container d-flex justify-content-center">
  <div class="form login-form">
    <div class="mb-3">
      <label for="email" class="form-label mt-3 px-3 text-white">Email address:</label>
      <input type="email" class="form-control px-2 mx-2" id="email" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
      <label for="password" class="form-label px-3 text-white">Password:</label>
      <input type="password" class="form-control px-2 mx-2" id="password">
    </div>
    <button type="button" class="btn btn-outline-success p-2 m-2 text-white" id="loginBtn">Login</button>
  </div>
</div>
<div class="container d-flex justify-content-center">
  <a class="text-white" href="/signup">Sign Up</a>
</div>
<script src="/js/login.js"></script>